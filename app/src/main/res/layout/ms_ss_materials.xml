<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/Sub_colorAppTheme2"
    android:clickable="true">
    <androidx.cardview.widget.CardView
        android:id="@+id/card_banner_ms_ss"
        app:cardBackgroundColor="#ffff"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="160dp">


    </androidx.cardview.widget.CardView>

   <androidx.cardview.widget.CardView
       android:layout_below="@id/card_banner_ms_ss"
       app:cardBackgroundColor="#ffff"
       android:layout_marginTop="100dp"
       app:cardElevation="10dp"
       app:cardCornerRadius="8dp"
       android:id="@+id/card_mm"
       android:layout_centerHorizontal="true"
       android:layout_marginRight="50dp"
       android:layout_marginLeft="50dp"
       android:layout_width="180dp"
       android:layout_height="60dp">
    <ImageView
        android:src="@drawable/ms_material"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


   </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView

        app:cardBackgroundColor="#ffff"
        app:cardElevation="10dp"
        app:cardCornerRadius="8dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/card_mm"
        android:id="@+id/card_ss"
        android:layout_marginRight="50dp"
        android:layout_marginLeft="50dp"
        android:layout_width="180dp"
        android:layout_height="60dp">
        <ImageView
            android:src="@drawable/ss_material"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>

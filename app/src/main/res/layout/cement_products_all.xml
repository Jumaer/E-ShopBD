<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Sub_colorAppTheme">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#ffff"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp"
        android:layout_margin="3dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/core_image_tag_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/core_image_cement"
                    android:layout_marginTop="0dp"
                    android:layout_centerHorizontal="true"
                    android:scaleType="fitXY"
                    android:src="@drawable/ss"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"/>
                <RelativeLayout
                    android:id="@+id/product"
                    android:layout_marginTop="122dp"
                    android:layout_marginRight="2dp"
                    android:layout_centerHorizontal="true"
                    android:layout_width="wrap_content"
                    android:layout_height="25dp">


                    <TextView

                        android:id="@+id/product_name_cement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:layout_marginLeft="27dp"
                        android:layout_marginTop="0dp"
                        android:layout_marginBottom="1dp"
                        android:text="Product"
                        android:textColor="#000000"
                        android:textSize="10sp"

                        android:textStyle="bold" />


                </RelativeLayout>


            </RelativeLayout>




            <RelativeLayout
                android:layout_marginBottom="6dp"
                android:layout_below="@+id/core_image_tag_rel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginBottom="3dp"
                    android:background="@drawable/button_design"
                    android:layout_marginTop="1dp"
                    android:id="@+id/prev"
                    android:layout_centerHorizontal="true"
                    android:layout_height="10dp"
                    android:layout_width="60dp">
                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/product_prev_price_cement"
                            android:textColor="#000000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="0dp"
                            android:text="price past"
                            android:textSize="7sp" />

                        <ImageView
                            android:layout_marginLeft="1dp"
                            android:layout_width="40dp"
                            android:layout_height="10dp"
                            android:src="@drawable/cross_taka_red" />
                        <ImageView

                            android:layout_marginLeft="4dp"
                            android:id="@+id/taka_id_prev"
                            android:layout_marginTop="1dp"
                            android:layout_width="8dp"
                            android:layout_height="7dp"
                            android:src="@drawable/taka_black" />
                    </RelativeLayout>



                </RelativeLayout>
                <RelativeLayout
                    android:background="@drawable/back_price_cons"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@+id/prev"
                    android:layout_height="15dp"
                    android:layout_width="90dp">
                    <RelativeLayout
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView

                            android:id="@+id/product_current_price_cement"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_marginLeft="2dp"
                            android:layout_marginTop="0dp"
                            android:layout_marginRight="7dp"
                            android:layout_toRightOf="@+id/taka_id"
                            android:text="Current Price"
                            android:textColor="@color/Sub_colorAppTheme"
                            android:textSize="12sp" />

                        <ImageView
                            android:layout_marginLeft="7dp"
                            android:id="@+id/taka_id"
                            android:layout_marginTop="1dp"
                            android:layout_width="15dp"
                            android:layout_height="12dp"
                            android:src="@drawable/taka_white" />

                    </RelativeLayout>


                </RelativeLayout>



            </RelativeLayout>






        </RelativeLayout>








    </androidx.cardview.widget.CardView>

</LinearLayout>
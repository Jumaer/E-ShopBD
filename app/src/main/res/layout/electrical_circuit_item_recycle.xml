<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Sub_colorAppTheme2">
    <androidx.cardview.widget.CardView
        app:cardBackgroundColor="#ffff"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        android:layout_margin="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="320dp">

          <RelativeLayout
              android:id="@+id/core_image_tag_rel"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
           <ImageView
               android:id="@+id/core_image_circuit_breaker"
               android:layout_marginTop="0dp"
               android:layout_centerHorizontal="true"
               android:scaleType="fitXY"
               android:src="@drawable/ss"
               android:layout_width="match_parent"
               android:layout_height="170dp"/>
              <RelativeLayout
                  android:layout_marginTop="140dp"
                  android:layout_marginRight="20dp"
                  android:layout_alignParentRight="true"
                  android:layout_width="wrap_content"
                  android:layout_height="70dp">
                  <ImageView
                      android:scaleType="fitXY"
                      android:src="@drawable/tag_final"
                      android:layout_width="110dp"
                      android:layout_height="match_parent"/>

                  <TextView
                      android:textSize="10sp"
                      android:id="@+id/product_name_circuit_breaker"
                      android:textStyle="bold"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginLeft="27dp"
                      android:layout_marginTop="23dp"
                      android:text="Product"
                      android:textColor="#FFFF" />


              </RelativeLayout>


          </RelativeLayout>
          <RelativeLayout
              android:layout_below="@+id/core_image_tag_rel"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

              <RelativeLayout
                  android:id="@+id/product_description_circuit_breaker2"
              android:layout_width="match_parent"
              android:layout_height="68dp">

                  <TextView
                      android:layout_marginLeft="2dp"
                      android:layout_marginRight="2dp"
                      android:layout_centerInParent="true"
                      android:textSize="12sp"
                      android:textColor="@color/colorAppTheme"
                      android:id="@+id/product_description_circuit_breaker"
                      android:text="Product_description"
                      android:textStyle="italic"
                      android:textAlignment="center"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"/>
          </RelativeLayout>

              <LinearLayout
                  android:weightSum="2"
                  android:layout_below="@+id/product_description_circuit_breaker2"
                  android:layout_width="match_parent"
                  android:layout_height="35dp">
                  <RelativeLayout
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:layout_width="0dp">

                      <TextView
                          android:id="@+id/discount_product_circuit_breaker"
                          android:textColor="#000000"
                          android:layout_width="wrap_content"
                          android:layout_height="wrap_content"
                          android:layout_marginLeft="25dp"
                          android:layout_marginTop="10dp"
                          android:text="price past"
                          android:textSize="12sp" />

                      <ImageView
                          android:layout_marginLeft="4dp"
                          android:layout_width="65dp"
                          android:layout_height="match_parent"
                          android:src="@drawable/taka_with_cross" />

                  </RelativeLayout>
                  <RelativeLayout
                      android:layout_weight="1"
                      android:layout_height="match_parent"
                      android:layout_width="0dp">
                      <ImageView
                          android:layout_marginRight="4dp"
                          android:layout_alignParentRight="true"
                          android:scaleType="fitXY"
                          android:src="@drawable/tag2"
                          android:layout_width="75dp"
                          android:layout_height="match_parent"/>
                      <ImageView
                          android:id="@+id/tk"
                          android:layout_marginTop="7dp"
                          android:layout_marginRight="56dp"
                          android:layout_alignParentRight="true"
                          android:src="@drawable/taka"
                          android:scaleType="fitXY"
                          android:layout_width="15dp"
                          android:layout_height="20dp"/>
                      <TextView
                          android:id="@+id/price_of_product_circuit_breaker"
                          android:textStyle="bold"
                          android:textSize="13sp"
                          android:layout_marginTop="8dp"
                          android:layout_marginRight="20dp"
                          android:layout_alignParentRight="true"
                          android:text="80"
                          android:textColor="#000000"
                          android:layout_width="wrap_content"
                          android:layout_height="match_parent"/>


                  </RelativeLayout>


              </LinearLayout>






          </RelativeLayout>





      </RelativeLayout>


    </androidx.cardview.widget.CardView>

</LinearLayout>
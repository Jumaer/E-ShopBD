<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#FFFF"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Account">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:id="@+id/relative_next_page"
                android:layout_margin="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="90dp"
                android:layout_height="50dp">
                <TextView
                    android:onClick="openActivity2"
                    android:id="@+id/SkipText_view"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:text="Skip >>"
                    android:textStyle="bold"
                    android:textColor="#dd9900"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>



            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/leave"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_width="100dp"
                android:layout_height="30dp">
                <TextView
                     android:drawableLeft="@drawable/back"
                    android:id="@+id/LeaveText_view"
                    android:textSize="18sp"
                    android:layout_centerInParent="true"
                    android:text=" Exit"
                    android:textStyle="bold"
                    android:textColor="#3AA221"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/coreRelative_account"
                android:layout_centerHorizontal="true"
                android:background="#FFFF"
                android:layout_marginTop="70dp"
                android:layout_width="200dp"
                android:layout_height="200dp">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_margin="2dp"
                    android:id="@+id/logo_main"
                    android:src="@drawable/logo_final"
                    android:layout_marginTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>



            </RelativeLayout>
            <RelativeLayout
                android:layout_below="@+id/coreRelative_account"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_account_id_pass"
                    android:layout_marginBottom="20dp"
                    app:cardElevation="20dp"
                    android:layout_marginTop="5dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="#fff"
                    android:layout_marginRight="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="240dp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <RelativeLayout
                            android:id="@+id/r1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">


                            <RelativeLayout
                                android:layout_centerHorizontal="true"
                                android:layout_width="310dp"
                                android:layout_height="120dp"
                                android:layout_alignParentTop="true"
                                >
                                <ImageView
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginTop="50dp"
                                    android:src="@drawable/account"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"/>

                                <EditText
                                    android:textAlignment="center"
                                    android:layout_marginRight="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentTop="true"
                                    android:textColorHighlight="@color/colorAppTheme"
                                    android:layout_marginTop="50dp"
                                    android:background="@drawable/design_accound_edit"
                                    android:hint="User Name"
                                    android:layout_width="200dp"
                                    android:layout_height="50dp"/>

                            </RelativeLayout>
                            <RelativeLayout
                                android:layout_centerHorizontal="true"
                                android:layout_alignParentBottom="true"
                                android:layout_width="310dp"
                                android:layout_height="120dp">
                                <ImageView
                                    android:layout_marginLeft="20dp"
                                    android:layout_marginBottom="50dp"
                                    android:layout_alignParentBottom="true"
                                    android:src="@drawable/ic_compare_black_24dp"
                                    android:layout_width="50dp"
                                    android:layout_height="50dp"/>

                                <EditText
                                    android:textAlignment="center"
                                    android:layout_marginRight="20dp"
                                    android:layout_alignParentRight="true"
                                    android:layout_alignParentBottom="true"
                                    android:textColorHighlight="@color/colorAppTheme"
                                    android:layout_marginBottom="50dp"
                                    android:background="@drawable/design_accound_edit"
                                    android:hint="*******"
                                    android:layout_width="200dp"
                                    android:layout_height="50dp"/>
                            </RelativeLayout>



                        </RelativeLayout>



                    </RelativeLayout>



                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:id="@+id/relative_texts"
                    android:layout_marginTop="20dp"
                    android:layout_below="@+id/card_account_id_pass"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:padding="5dp"

                        android:id="@+id/Button_logIN"
                        android:textColor="#868585"
                        android:text="Log In"
                        android:layout_marginRight="40dp"
                        android:layout_centerHorizontal="true"
                        android:background="@drawable/button_design"
                        android:drawableRight="@drawable/ic_arrow_forward_black_24dp"
                        android:layout_width="105dp"
                        android:layout_height="40dp"/>
                    <TextView
                        android:layout_marginTop="20dp"
                        android:layout_below="@+id/Button_logIN"
                        android:id="@+id/tv_forget_pass"
                        android:textColor="#F50606"
                        android:textStyle="italic"
                        android:layout_centerHorizontal="true"
                        android:text="Forget Password"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:textSize="18sp"
                        android:layout_margin="8dp"
                        android:layout_below="@+id/tv_forget_pass"
                        android:id="@+id/tv_createAcc"
                        android:textColor="#3AA221"
                        android:textStyle="italic"
                        android:layout_centerHorizontal="true"
                        android:text="Create Account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>






                </RelativeLayout>



            </RelativeLayout>
        </RelativeLayout>

    </ScrollView>



</RelativeLayout>
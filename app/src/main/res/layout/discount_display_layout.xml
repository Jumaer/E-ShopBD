<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:clickable="true"
    android:layout_height="wrap_content">
<androidx.cardview.widget.CardView
    android:layout_margin="2dp"
    android:layout_width="match_parent"
    app:cardElevation="3dp"
    app:cardBackgroundColor="#ffff"
    app:cardCornerRadius="5dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <ImageView
            android:id="@+id/discount_product_image"
            android:src="@drawable/e_light"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="200dp"/>
        <TextView
            android:id="@+id/discount_product_name"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_centerHorizontal="true"
            android:text="Discount Product Name"
            android:layout_below="@+id/discount_product_image"
            android:textColor="@color/colorAppTheme"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp"
            android:weightSum="2"
            android:orientation="horizontal"
            android:layout_below="@+id/discount_product_name"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RelativeLayout
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"
                android:background="@color/Sub_colorAppTheme2"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <ImageView
                    android:layout_marginTop="17dp"
                    android:src="@drawable/cross_taka_red"
                    android:scaleType="fitXY"
                    android:layout_width="wrap_content"
                    android:layout_height="15dp">

                </ImageView>
                <TextView

                    android:layout_centerInParent="true"
                    android:id="@+id/discount_product_previous_price"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginLeft="5dp"
                    android:layout_alignParentLeft="true"
                    android:text="Previous Price"
                    android:textColor="#000000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/discount_tag1"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:text="Taka"
                    android:textColor="@color/colorAppTheme"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginBottom="2dp"
                android:layout_marginTop="2dp"
                android:layout_marginRight="4dp"
                android:layout_marginLeft="4dp"

                android:background="@color/colorAppTheme"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="match_parent">
                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/discount_product_current_price"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:layout_marginLeft="8dp"
                    android:layout_alignParentLeft="true"
                    android:text="Current Price"
                    android:textColor="#FFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_centerInParent="true"
                    android:id="@+id/discount_tag2"
                    android:textStyle="italic"
                    android:textSize="12sp"
                    android:layout_marginRight="10dp"
                    android:layout_alignParentRight="true"
                    android:text="Taka"
                    android:textColor="#FFFF"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            </RelativeLayout>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="85dp"
            android:layout_height="68dp"
            android:background="@drawable/shape_discount">
            <TextView
                android:layout_marginTop="5dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:textColor="#F00F0F"
                android:text="Off"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <TextView

                android:id="@+id/discount_real"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="25dp"
                android:text="13"
                android:layout_marginRight="5dp"
                android:textColor="#FFFF"
                android:textSize="15sp" />

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
             android:layout_marginLeft="48dp"
                android:layout_marginTop="25dp"
                android:text="%"
                android:textColor="#FFFF"
                android:textSize="15sp" />

        </RelativeLayout>


    </RelativeLayout>


</androidx.cardview.widget.CardView>
</LinearLayout>